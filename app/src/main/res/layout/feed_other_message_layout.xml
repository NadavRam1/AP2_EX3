<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:padding="4dp">

    <TextView
        android:text="hello world"
        android:id="@+id/otherMessage"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:background="@drawable/received_message_background"
        android:padding="12dp"
        android:paddingBottom="16dp"
        android:textColor="@color/textColor"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.8" />

    <TextView
        android:text="timememe"
        android:id="@+id/timeReceived"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-16dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/secondaryColor"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@id/otherMessage"
        app:layout_constraintTop_toBottomOf="@id/otherMessage" />

</androidx.constraintlayout.widget.ConstraintLayout>